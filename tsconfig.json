{
  "compilerOptions": {
    "baseUrl": "./",
    "esModuleInterop": true,
    "jsx": "preserve",
    "noUnusedLocals": true,
    "paths": {
      "~/*": ["./*"]
    },
    "resolveJsonModule": true,
    "strictNullChecks": true,
    "target": "ES5"
  },
  "include": [
    "**/*"
  ],
  "exclude": [
    "build",
    "coverage",
    "dist",
    "node_modules",
    "public"
  ]
}
